# do not bell on tab-completion
#set bell-style none

set meta-flag on
set input-meta on
set convert-meta off
set output-meta on
set editing-mode vi
set colored-stats on
set colored-completion-prefix on

# for linux console
"\C-l": clear-display
"\C-a": beginning-of-line
"\C-d": end-of-line
"\C-p": previous-history
"\C-o": next-history
